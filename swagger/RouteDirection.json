{
    "type": "object",
    "required": [
        "route",
        "directions"
    ],
    "properties": {
        "agency" : {
            "$ref": "./Agency.json"
        },
        "route": {
            "$ref": "./Route.json"
        },
        "directions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": "string",
                    "dir": "integer",
                    "stops": {
                        "type": "array",
                        "items": {
                            "$ref": "./RouteStop.json"
                        }
                    }
                }
            }
        }
    }
}
