{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://opentransittools.com/stop.json",

    "properties": {
        "amenities": {
            "id": "/properties/amenities",
            "items": {
                "id": "/properties/amenities/items",
                "type": "string"
            },
            "type": "array"
        },
        "agency": {
            "$ref": "/json-schema/agencies.json#"
        },
        "description": {
            "id": "/properties/description",
            "type": "string"
        },
        "direction": {
            "id": "/properties/direction",
            "type": "string"
        },
        "distance": {
            "id": "/properties/distance",
            "type": "integer"
        },
        "has_alerts": {
            "id": "/properties/has_alerts",
            "type": "boolean"
        },
        "has_amenities": {
            "id": "/properties/has_amenities",
            "type": "boolean"
        },
        "has_errors": {
            "id": "/properties/has_errors",
            "type": "boolean"
        },
        "lat": {
            "id": "/properties/lat",
            "type": "number"
        },
        "lon": {
            "id": "/properties/lon",
            "type": "number"
        },
        "name": {
            "id": "/properties/name",
            "type": "string"
        },
        "order": {
            "id": "/properties/order",
            "type": "integer"
        },
        "position": {
            "id": "/properties/position",
            "type": "string"
        },
        "stop_id": {
            "id": "/properties/stop_id",
            "type": "string"
        },
        "url": {
            "id": "/properties/url",
            "type": "string"
        }
    },
    "required": ["stop_id", "agency"]
}
